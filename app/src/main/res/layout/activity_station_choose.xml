<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="站点选择"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />

        <RelativeLayout
            android:id="@+id/rl_back_distric_choosecity"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:scaleType="centerCrop"
                android:src="@mipmap/title_back" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ff53b6eb" />

    <TextView
        android:id="@+id/tv_all_distric_choosecity"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:text="全国"
        android:textColor="#ffffffff"
        android:textSize="15.0sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ff53b6eb" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ListView
            android:listSelector="@color/colorPrimary"
            android:id="@+id/lv_city_distric_choosecity"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:divider="#00ffffff"
            android:dividerHeight="0.5dp"
            android:scrollbars="none" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#ff53b6eb" />

        <ListView
            android:listSelector="@color/colorPrimary"
            android:id="@+id/lv_province_distric_choosecity"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:divider="#00ffffff"
            android:dividerHeight="0.5dp"
            android:scrollbars="none" />
        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#ff53b6eb" />

        <ListView
            android:listSelector="@color/colorPrimary"
            android:id="@+id/lv_thread_distric_choosecity"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"

            android:divider="#00ffffff"
            android:dividerHeight="0.5dp"
            android:scrollbars="none"
            />

    </LinearLayout>

</LinearLayout>