<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nodata_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:background="@color/theme_color"
            android:id="@+id/statistical_button_station"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/nav_ico_list" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/divide_line"/>

        <RadioGroup
            android:id="@+id/rg_group_statistiaclfragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_color"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_networkfragment"
                style="@style/BottomTabStyle"
                android:background="@drawable/selector_radio_nav"
                android:checked="true"
                android:text="联网"
                android:textColor="@color/btn_text_selector" />

            <RadioButton
                android:id="@+id/id_indexfragment"
                style="@style/BottomTabStyle"
                android:background="@drawable/selector_radio_nav"
                android:text="指标"
                android:textColor="@color/btn_text_selector" />
        </RadioGroup>
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray" />


    <FrameLayout
        android:id="@+id/id_vediofragment_container_station"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>