<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/theme_color"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_license_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="车辆信息"
            android:textColor="@color/mine_info_todo_text_process"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/nodata_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:id="@+id/fg_todo_item_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--办理进度-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/activity_license_number1"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="车牌号码:  "
                            android:textColor="@color/mine_info_todo_text_process"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/activity_license_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="京123456"
                            android:textColor="@color/mine_info_todo_text_process_value"
                            android:textSize="16sp" />

                    </RelativeLayout>


                    <View
                        android:id="@+id/todo_item_view1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="44dp"
                        android:background="@color/divide_line" />


                    <!--预约起止日-->
                    <TextView
                        android:id="@+id/activity_license_site_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/todo_item_view1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="站点名称"
                        android:textColor="@color/mine_info_todo_text_process"

                        android:textSize="14sp" />

                    <!--当前任务-->
                    <TextView
                        android:id="@+id/activity_license_check_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_license_site_name"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="初检车重"
                        android:textColor="@color/mine_info_todo_text_process"

                        android:textSize="14sp" />
                    <!--申请信息-->
                    <TextView
                        android:id="@+id/activity_license_limitweight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_license_check_weight"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="车辆限重"
                        android:textColor="@color/mine_info_todo_text_process"

                        android:textSize="14sp" />

                    <!--流程状态-->
                    <TextView
                        android:id="@+id/activity_license_checked_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_license_limitweight"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="初检时间"
                        android:textColor="@color/mine_info_todo_text_process"
                        android:textSize="14sp" />


                    <View
                        android:id="@+id/todo_item_view2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/activity_license_checked_time"
                        android:layout_marginTop="15dp"
                        android:background="@color/divide_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_below="@+id/todo_item_view2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--承运单位-->
                        <TextView
                            android:id="@+id/activity_license_overload_name"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="超限幅度:"
                            android:textColor="@color/mine_info_todo_text_process"

                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/activity_license_overload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="19%"
                            android:textColor="@color/big_red"
                            android:textSize="16sp" />
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <View
                    android:id="@+id/photo_item_v1"
                    android:layout_width="87dp"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26.5dp"
                    android:layout_toLeftOf="@+id/fragment_baseinfo_photo_item_tv"
                    android:background="@color/divide_line" />

                <TextView
                    android:id="@+id/fragment_baseinfo_photo_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="车辆图片"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/photo_item_v2"
                    android:layout_width="87dp"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26.5dp"
                    android:layout_toRightOf="@+id/fragment_baseinfo_photo_item_tv"
                    android:background="@color/divide_line" />
            </RelativeLayout>
            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/theme_color" />-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp">
                    <uk.co.senab.photoview.PhotoView
                        android:id="@+id/activity_license_iv1"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_margin="4dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY" />
                    <ProgressBar
                        android:layout_gravity="center"
                        android:id="@+id/activity_license_pb1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">

                <uk.co.senab.photoview.PhotoView
                    android:id="@+id/activity_license_iv3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="4dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">

                <uk.co.senab.photoview.PhotoView
                    android:id="@+id/activity_license_iv2"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_margin="4dp" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">

                <uk.co.senab.photoview.PhotoView
                    android:id="@+id/activity_license_iv4"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_margin="4dp" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <View
                    android:id="@+id/photo_item_vedio"
                    android:layout_width="87dp"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26.5dp"
                    android:layout_toLeftOf="@+id/fragment_baseinfo_photo_item_tv_vedio"
                    android:background="@color/divide_line" />

                <TextView
                    android:id="@+id/fragment_baseinfo_photo_item_tv_vedio"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="监测视频"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/photo_item_v2_vedio"
                    android:layout_width="87dp"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26.5dp"
                    android:layout_toRightOf="@+id/fragment_baseinfo_photo_item_tv_vedio"
                    android:background="@color/divide_line" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp">

                <io.vov.vitamio.widget.MediaController
                    android:id="@+id/meia_controller"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:visibility="gone">

                </io.vov.vitamio.widget.MediaController>

                <FrameLayout
                    android:id="@+id/activity_license_rl_videoview"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp">

                    <io.vov.vitamio.widget.VideoView
                        android:id="@+id/activity_license_surface_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"></io.vov.vitamio.widget.VideoView>

                    <LinearLayout
                        android:id="@+id/media_control_linear"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#e0999999"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/start"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/vedio_play"
                            android:padding="2dp" />

                        <TextView
                            android:id="@+id/load_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="00:00" />

                        <SeekBar
                            android:id="@+id/mediacontroller_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:maxHeight="5dp"
                            android:minHeight="5dp"
                            android:progress="0"
                            android:secondaryProgress="0"></SeekBar>

                        <TextView
                            android:id="@+id/load_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="00:00" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/activity_license_videoIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:scaleType="center"
                        android:src="@mipmap/video_start"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/activity_license_tv"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_margin="4dp"
                    android:drawablePadding="-100dp"
                    android:drawableTop="@drawable/no_vedio"
                    android:gravity="center"
                    android:text="暂无视频数据"
                    android:textColor="@color/bigblack"
                    android:textSize="30sp"
                    android:visibility="gone" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>