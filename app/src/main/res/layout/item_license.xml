<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/nodata_background"
    android:id="@+id/content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="1dp"
            app:cardCornerRadius="4dp">
            <RelativeLayout
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_centerVertical="true"
                    android:id="@+id/iv"
                    android:layout_width="100dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/nodata_pic"/>
                <TextView
                    android:id="@+id/car_license"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/check_address"
                    android:layout_below="@+id/car_license"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/check_time"
                    android:layout_below="@+id/check_address"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/check_weight"
                    android:layout_below="@+id/check_time"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/dim_foreground_light"
                    android:id="@+id/day_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/battery_saver_mode_color"
                    android:id="@+id/overload_rate"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>




        </android.support.v7.widget.CardView>


</RelativeLayout>